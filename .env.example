# ClaudeHome Environment Configuration
# Copy this to .env and fill in your values

ANTHROPIC_API_KEY=<value>
# Required values:
# - HOME_ASSISTANT_URL=http://YOUR_HA_IP:8123
# - HOME_ASSISTANT_TOKEN=<value>
# - HA_HOST=YOUR_HA_IP
# - HA_USER=root (or your SSH user)
# - MQTT_BROKER=YOUR_HA_IP (if using MQTT)
HOME_ASSISTANT_URL=https://localip:8123
HOME_ASSISTANT_TOKEN=<value>
HA_CONFIG_DIR=<value>

# Credentials for the MQTT broker, if authentication is enabled.
MQTT_USER=<value>
MQTT_PASSWORD=<value>
MQTT_BROKER=192.168.50.250
MQTT_PORT=1883
# MQTT_THROTTLE_SECONDS=5
MQTT_TOPIC=homeassistant/#
DB_POLL_INTERVAL=30  

SSH_HOST=<value>
SSH_PORT=22
SSH_USER=root

DISCORD_TOKEN=<value>

# Credentials for the MariaDB instance where Home Assistant stores its history.
# The GenAI Service uses this to perform read-only trend analysis.
MARIADB_HOST=<value>
MARIADB_PORT=<value>
MARIADB_USER=<value>
MARIADB_PASSWORD=<value>
MARIADB_DATABASE=<value>

LLM_PROVIDER=litellm
LITELLM_URL=http://localip:port
LITELLM_MODEL=local-chat
LITELLM_API_KEY=<value>
OLLAMA_URL=http://localip:11434
OLLAMA_MODEL=qwen2.5-coder:7b
OPENAI_API_KEY=<value>